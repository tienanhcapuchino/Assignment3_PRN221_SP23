@{
}
@using SignalRAssignment.Entity
@model AppUsers
<h1>Update AppUser</h1>

<div>
    <form method="post" action="/AppUsers/OnUpdate">
        <input type="hidden" name="us.UserId" value="@Model.UserId" />
        <div class="form-group">
            <label class="control-label">FullName</label>
            <input name="us.FullName" value="@Model.FullName" placeholder="enter name" required type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Email</label>
            <input name="us.Email" value="@Model.Email" placeholder="enter email" required type="email" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Password</label>
            <input name="us.Password" value="@Model.Password" placeholder="enter password" required type="password" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Address</label>
            <input name="us.Address" value="@Model.Address" placeholder="enter address" required type="text" class="form-control" />
        </div>
        <input class="btn btn-primary" type="submit" value="save" />
    </form>
</div>