@{
}
@using SignalRAssignment.Entity
@model PostCategories
<h1>Add new PostCategory</h1>

<div>
    <form method="post" action="/PostCategories/OnUpdate">
        <input type="hidden" name="po.CategoryId" value="@Model.CategoryId" />
        <div class="form-group">
            <label class="control-label">Name</label>
            <input name="po.CategoryName" value="@Model.CategoryName" placeholder="enter name" required type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Description</label>
            <input name="po.Description" value="@Model.Description" placeholder="enter name" required type="text" class="form-control" />
        </div>
        <input class="btn btn-primary" type="submit" value="Save" />
    </form>
</div>