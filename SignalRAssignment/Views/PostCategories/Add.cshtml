<h1>Add new PostCategory</h1>

<div>
    <form method="post" action="/PostCategories/OnAdd">
        <div class="form-group">
            <label class="control-label">Name</label>
            <input name="po.CategoryName" placeholder="enter name" required type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Description</label>
            <input name="po.Description" placeholder="enter name" required type="text" class="form-control" />
        </div>
        <input class="btn btn-primary" type="submit" value="Add" />
    </form>
</div>
