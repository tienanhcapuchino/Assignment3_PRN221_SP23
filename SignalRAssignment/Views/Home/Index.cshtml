@{
    ViewData["Title"] = "Home Page";
}
@using SignalRAssignment.Entity
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<a href="/Posts/Index" class="btn btn-primary">Posts management</a>
<a href="/PostCategories/Index" class="btn btn-primary">PostCategories management</a>
<a href="/AppUsers/Index" class="btn btn-primary">AppUsers management</a>
<form method="post" action="/Home/Search">
    <input type="search" value="@ViewBag.search" name="seachValue" placeholder="enter title or content to search" class="form-control" />
    <input class="btn btn-primary" type="submit" value="Search"/>
</form>
<div style="display:flex; flex-wrap:wrap;gap:10px" class="container">
    @{
        foreach(Posts item in Model)
        {
            <div class="card" style="width: 25rem;margin-top:10px">
                <div class="card-body">
                    <div style="color:brown" class="card-title">
                        <h5 class="flex-grow-1">@item.Title</h5><br>
                        <h5 class="flex-grow-12">@item.Content</h5>
                    </div>
                    <p style="color:blue" class="card-text">Author: @item.AppUsers.FullName</p><br>
                    <p style="color:chocolate" class="card-text">Category: @item.PostCategories.CategoryName</p><br>
                    <p style="color:blue" class="card-text">Created date: @item.CreatedDate.ToString("dd-MM-yyyy")</p><br>
                    <p style="color:blue" class="card-text">Updated date: @item.UpdatedDate.ToString("dd-MM-yyyy")</p>
                </div>
            </div>
        }
    }
</div>